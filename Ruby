# Represents a landmark or point of interest
class Landmark
  attr_reader :name, :type, :description

  def initialize(name, type, description)
    @name = name
    @type = type
    @description = description
  end

  def to_s
    "Name: #{name}, Type: #{type}, Description: #{description}"
  end
end

# Represents the city of Pune
class PuneInfo
  def initialize
    @facts = {
      "Location" => "Maharashtra, India",
      "Population" => "Approx. 7.5 million (2024)",
      "Known For" => "IT and automobile industries, educational institutions, and cultural heritage"
    }
    @landmarks = []
    
    add_landmark("Shaniwar Wada", "Historical Fort", "An 18th-century fort and the seat of the Peshwas of the Maratha Empire.")
    add_landmark("Aga Khan Palace", "Historical Place", "A palace where Mahatma Gandhi and his wife were imprisoned.")
    add_landmark("Dagadusheth Halwai Ganapati Temple", "Religious Site", "A popular temple dedicated to the deity Ganesha.")
  end

  def add_landmark(name, type, description)
    @landmarks << Landmark.new(name, type, description)
  end

  def get_fact(name)
    @facts[name]
  end

  def search_landmarks_by_type(type)
    @landmarks.select { |l| l.type == type }
  end
end

# Main script logic
pune = PuneInfo.new
puts "Population: #{pune.get_fact('Population')}"

puts "\nSearching for historical forts:"
pune.search_landmarks_by_type("Historical Fort").each { |l| puts l }

puts "\nSearching for religious sites:"
pune.search_landmarks_by_type("Religious Site").each { |l| puts l }
