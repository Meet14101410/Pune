import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

// Represents a point of interest
class PointOfInterest {
    private String name;
    private String type;
    private String description;

    public PointOfInterest(String name, String type, String description) {
        this.name = name;
        this.type = type;
        this.description = description;
    }

    public String getName() { return name; }
    public String getType() { return type; }
    public String getDescription() { return description; }

    @Override
    public String toString() {
        return "Name: " + name + ", Type: " + type + ", Description: " + description;
    }
}

// Manages information about Pune
public class PuneInfoSystem {
    private Map<String, String> cityFacts;
    private List<PointOfInterest> pointsOfInterest;

    public PuneInfoSystem() {
        cityFacts = new HashMap<>();
        cityFacts.put("Location", "Maharashtra, India");
        cityFacts.put("Population", "Approx. 7.5 million (2024)");
        cityFacts.put("Known For", "IT and automobile industries, educational institutions, and cultural heritage");

        pointsOfInterest = new ArrayList<>();
        pointsOfInterest.add(new PointOfInterest("Shaniwar Wada", "Historical Fort", "An 18th-century fort and the seat of the Peshwas of the Maratha Empire."));
        pointsOfInterest.add(new PointOfInterest("Aga Khan Palace", "Historical Place", "A palace where Mahatma Gandhi and his wife were imprisoned."));
        pointsOfInterest.add(new PointOfInterest("Dagadusheth Halwai Ganapati Temple", "Religious Site", "A popular temple dedicated to the deity Ganesha."));
    }

    public void getCityFact(String factName) {
        if (cityFacts.containsKey(factName)) {
            System.out.println(factName + ": " + cityFacts.get(factName));
        } else {
            System.out.println("Fact not found: " + factName);
        }
    }

    public void searchPointsOfInterest(String searchTerm) {
        System.out.println("\n--- Search Results for '" + searchTerm + "' ---");
        boolean found = false;
        for (PointOfInterest poi : pointsOfInterest) {
            if (poi.getName().contains(searchTerm) || poi.getType().contains(searchTerm)) {
                System.out.println(poi.toString());
                System.out.println("----------------------------------------");
                found = true;
            }
        }
        if (!found) {
            System.out.println("No matching points of interest found.");
        }
    }

    public static void main(String[] args) {
        PuneInfoSystem infoSystem = new PuneInfoSystem();
        infoSystem.getCityFact("Population");
        infoSystem.getCityFact("Known For");
        infoSystem.searchPointsOfInterest("Fort");
        infoSystem.searchPointsOfInterest("Temple");
    }
}
